<% include ./index/top.ejs%>
<section class="section1">
  <div class="board_list_wrap">
    <a>로그인</a>
  </div>
  <div class="board_form_wrap">
    <form action="/users/login" method="POST" name="frm_login">
      <div class="form-group">
        <label>id:</label>
        <input type="text" class="form-control" id="id" name="id">
      </div>
      <div class="form-group">
        <label>password:</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>
      <div id="login_check_btn_wrap_wrap">
        <div id ="login_check_btn_wrap">
          <button type="button" id="login_check_btn" onclick="login_check()" class="btn">로그인</button>
        </div>
        <div id ="login_check_join_btn_wrap">
          <button type="button" onclick="location.href='/users/join'" id="login_check_join_btn" class="btn">회원가입</button>
        </div>
      </div>
    </form>
  </div>
</section>
</div>
<script>
  let login_check = function () {
    if(!document.getElementById('id').value){
      alert('아이디를 입력해주세요.');
      id.focus();
      return;
    }
    if(!document.getElementById('password').value){
      alert('비밀번호를 입력해주세요.');
      id.focus();
      return;
    }
    frm_login.submit();
  }
  alert("<%= message%>");
</script>
